{
  "name": "license",
  "path": "LICENSE",
  "default-action": "replace",

  "user-prompt": {
    "message": "Choose a license",
    "type": "select"
  },

  "options": {
    "MIT": {
      "content": "licenses/mit.txt",
      "meta": {
        "short_name": "MIT",
        "name": "MIT License",
        "url": "http://opensource.org/licenses/MIT"
      },
      "type": "file"
    },

    "Apache 2.0": {
      "content": "licenses/apache.txt",
      "meta": {
        "short_name": "Apache 2.0",
        "name": "Apache License, Version 2.0",
        "url": "http://opensource.org/licenses/Apache-2.0"
      },
      "type": "file"
    },

    "BSD 3-Clause": {
      "content": "licenses/bsd-3-clause.txt",
      "meta": {
        "short_name": "BSD 3-Clause",
        "name": "BSD 3-Clause License",
        "url": "http://opensource.org/licenses/BSD-3-Clause"
      },
      "type": "file"
    },

    "BSD 2-Clause": {
      "content": "licenses/bsd-2-clause.txt",
      "meta": {
        "short_name": "BSD 2-Clause",
        "name": "BSD 2-Clause License",
        "url": "http://opensource.org/licenses/BSD-2-Clause"
      },
      "type": "file"
    },

    "GPLv3": {
      "content": "licenses/gplv3.txt",
      "meta": {
        "short_name": "GPLv3",
        "name": "GNU General Public License, Version 3",
        "url": "http://opensource.org/licenses/GPL-3.0"
      },
      "type": "file"
    },

    "GPLv2": {
      "content": "licenses/gplv2.txt",
      "meta": {
        "short_name": "GPLv2",
        "name": "GNU General Public License, Version 2",
        "url": "http://opensource.org/licenses/GPL-2.0"
      },
      "type": "file"
    },

    "unlicense": {
      "content": "licenses/unlicense.txt",
      "meta": {
        "short_name": "Unlicense",
        "name": "The Unlicense",
        "url": "http://unlicense.org/"
      },
      "type": "file"
    }
  }
}
